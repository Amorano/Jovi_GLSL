#ifndef LIB_NOISE_BILLOWED
#define LIB_NOISE_BILLOWED

#include .lib/noise/noise_perlin.lib

//------------------------------------------------------------------------------
// BILLOWED NOISE
//------------------------------------------------------------------------------

// Billowed noise (absolute value of Perlin)
float noise_billowed(vec2 p) {
    return abs(noise_perlin(p * 2.0) * 2.0 - 1.0);
}

#endif